<h1>New Game:</h1>
<div><% @letters.each do |letter| %>
    <p><%= letter %></p>
    <% end%>
</div>
<h5>What is the longer word you can find?</h5>


<form action="/score" method="post">
  <input type="text" name="longest" placeholder="Put your longest word">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="submit">
</form>
